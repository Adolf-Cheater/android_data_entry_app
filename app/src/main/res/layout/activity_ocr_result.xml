<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.data_entry_android.ZoomableImageView
            android:id="@+id/originalImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="matrix" />

        <com.example.data_entry_android.ZoomableImageView
            android:id="@+id/ocrResultImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="matrix" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/generateExcelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Excel" />

        <Button
            android:id="@+id/generateDocxButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Docx" />

        <Button
            android:id="@+id/saveImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save OCR Image"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>